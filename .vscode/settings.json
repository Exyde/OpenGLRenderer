{
    // === C++ IntelliSense & CMake ===
    "cmake.generator": "MinGW Makefiles",
    "cmake.buildDirectory": "${workspaceFolder}/build",
    "cmake.configureOnOpen": true,
    "cmake.buildBeforeRun": true,
    "cmake.defaultBuildTarget": "OpenGLRenderer",
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    // === Fichiers associés ===
    "files.associations": {
        "*.tcc": "cpp",
        "*.ipp": "cpp",
        "array": "cpp",
        "string": "cpp",
        "string_view": "cpp",
        "iostream": "cpp",
        "vector": "cpp",
        "unordered_map": "cpp",
        "unordered_set": "cpp",
        "memory": "cpp",
        "algorithm": "cpp",
        "utility": "cpp"
    },
    // === Apparence & confort ===
    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "files.exclude": {
        "**/build": true,
        "**/.vs": true,
        "**/.vscode/ipch": true
    },
    // === Debug par défaut ===
    "cmake.debugConfig": {
        "args": [],
        "cwd": "${workspaceFolder}",
        "environment": [],
        "MIMode": "gdb",
        "miDebuggerPath": "C:\\msys64\\mingw64\\bin\\gdb.exe",
        "stopAtEntry": false
    },
    // === Terminal intégré ===
    "terminal.integrated.shellArgs.windows": [
        "--login"
    ],
    "terminal.integrated.defaultProfile.windows": "Command Prompt",
    // === Formatage C++ ===
    "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: Google, IndentWidth: 4 }"
}